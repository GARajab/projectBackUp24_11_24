<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Select Service</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container row justify-content-center mx-auto text-center">
      <h1>Select Your Service</h1>
      <form action="/addService" method="POST" name="purchseService">
      <select
        id="nameOfService"
        name="nameOfServiceID"
        class="form-select w-50 text-center mx-auto"
        aria-label="Default select example"
        style="margin-top:30px"
      >
        <option selected>Select The Service</option>
        <% services.forEach((service) => { %>
        <option value="<%= service._id %>" data-price="<%= service.price %>">
          <%= service.nameOfService %>
        </option>
        <% }) %>
      </select>
      <div class="mt-3 row justify-content-center mx-auto">
        <label
          for="price"
          class="form-label text-center"
          style="font-size: 30px"
          >Price</label
        >
        <input
          type="text"
          id="price"
          name="price"
          class="form-control w-50 text-center"
          
        />

        <label
          for="IMEI"
          class="form-label text-center"
          style="font-size: 30px; margin-top: 30px"
          >Enter Your iPhone IMEI</label
        >
        <input id="IMEI" name="IMEI" type="text" class="form-control w-50 text-center" />
        <br />
        <br />
        <button  class="btn btn-success w-50 text-center" style="font-size: 30px; margin-top: 30px">Purchse</button>
        </form>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
    function updatePrice() {
        const select = document.getElementById('nameOfService');
        const priceInput = document.getElementById('price');
        const selectedOption = select.options[select.selectedIndex];

        // Update the price input field with the selected option's price stored in data attribute
        if (selectedOption.value) {
            priceInput.value = selectedOption.getAttribute('data-price');
        } else {
            priceInput.value = "";  // Clear the price if no valid service is selected
        }
    }

    // Optional: Validate form before submission
    function validateForm() {
        const priceInput = document.getElementById('price');
        if (priceInput.value === "") {
            alert("Please select a service to continue.");
            return false; // Cancel the form submission
        }
        return true; // Allow form submission
    }
</script>
  </body>
</html>
